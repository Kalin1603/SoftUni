@model List<Eventures.ViewModels.Events.EventViewModel>


@{
    ViewData["Title"] = "All";
}

<div class="w-75 mx-auto" id="data-holder">
    <h1 class="text-center">All Events</h1>
    <hr class="bg-eventures hr-2" />

    <table class="table">
        <thead>
            <tr class="row mx-auto">
                <th class="col-md-1">#</th>
                <th class="col-md-4">Name</th>
                <th class="col-md-2">Start</th>
                <th class="col-md-2">End</th>
                <th class="col-md-3">Place</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr class="row mx-auto">
                    <td class="col-md-1">@(i+1)</td>
                    <td class="col-md-4">@Model[i].Name</td>
                    <td class="col-md-2">@Model[i].Start</td>
                    <td class="col-md-2">@Model[i].End</td>
                    <td class="col-md-3">@Model[i].Place</td>
                </tr>

            }

        </tbody>
    </table>
</div>
